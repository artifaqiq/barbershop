<!-- Container (The Band Section) -->
<div id="services" class="container text-center">
  <h3>Услуги</h3>

  <div class="col-sm-12">
    <% @services.each do |service| %>

        <div class="col-sm-4" style="margin-bottom: 3%">
          <a href="<%= service_path(service) %>">
            <%= cl_image_tag(service.photo.path, :width => 300, :class =>"img-circle-person") %>
          </a>
          <h2><%= service.title %></h2>

        </div>

    <% end %>

  </div>
</div>

<div id="sales" class="container text-center">
  <h3>Акции</h3>

  <div class="col-sm-12">
    <% @sales.each do |sale| %>
        <div class="col-sm-4">
          <div class="image">
            <a href="<%=sale_path(sale) %>">
              <%= cl_image_tag(sale.photo.path, class: "image")%>
            </a>
            <img class="sale" src="<%= asset_path("sale.png")%>"/>
            <div class="sale_text"><%= sale.percent.to_s %>%</div>
          </div>
        </div>
    <% end %>

  </div>
</div>



<!-- Container (TOUR Section) -->
